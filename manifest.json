{
  "manifest_version": 3,
  "name": "Data Guardian",
  "version": "0.1.0",
  "description": "Protects sensitive data from being exposed to AI models",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "clipboardRead",
    "notifications",
    "alarms",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://www.perplexity.ai/*",
    "https://grok.com/*",
    "https://x.com/*",
    "https://*.anthropic.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://www.perplexity.ai/*",
        "https://grok.com/*",
        "https://x.com/*",
        "https://*.anthropic.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Data Guardian"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}